<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.spaceflightnews.ui.ArticleFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_article" >
        <action
            android:id="@+id/action_feedFragment_to_articlesFragment"
            app:destination="@id/articlesFragment" />
    </fragment>
    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.example.spaceflightnews.ui.BlogFragment"
        android:label="fragment_articles"
        tools:layout="@layout/fragment_blog" >
        <action
            android:id="@+id/action_articlesFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
</navigation>